{
	"compilerOptions": {
		"target": "ES2023",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDirs": ["src", "./shared", "../shared"],
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"@shared/*": ["./shared/*", "../shared/*"]
		}
	},
	"include": ["src/**/*", "./shared/**/*", "../shared/**/*"]
}
